<div class="row">
  <aside class="col-xs-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @user.name %>のお気に入り一覧ページ</h3>
      </div>
    </div>
  </aside>
  <div class="col-xs-8">
    <ul class="nav nav-tabs nav-justified">
      <li class="<%= 'active' if current_page?(user_path(@user)) %>">お気に入りMicroposts <span class="badge"><%= @count_favors %></span></li>
    </ul>
    <%= render 'microposts/microposts',microposts: @microposts %>
  </div>
</div>